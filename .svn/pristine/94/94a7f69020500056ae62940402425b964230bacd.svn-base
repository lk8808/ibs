/*手风琴样式调整*/
#RightAccordion .panel-title {
	padding-left: 10px;
}

/*菜单树样式调整*/
.tree-title {
	margin-left: 10px;
	font-weight: bold;
	color: #666;
}
.tree-node-selected .tree-title {
	color: #fff;
}
.tree-folder-open {
    background: none;
}

.accordion .accordion-header-selected {
	background: #F2F2F2;
}
.accordion .accordion-header-selected .panel-title {
	color: #777;
}
